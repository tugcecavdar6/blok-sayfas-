@using proje44.Controllers
@model List<Class1>

@{ ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml"; }

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Adı Soyadı</th>
        <th>Adı Hakkında</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.yazarID</td>
    <td>@item.yazarAd</td>
    <td>@item.yazarHakkinda</td>
    <td><a href="/YazarTest/DeleteYazar/@item.yazarID" class="btn btn-outline-danger">Sil</a></td>
    <td><a href="/YazarTest/EditYazar/@item.yazarID" class="btn btn-outline-success">Düzenle</a></td>
</tr>}
</table>
<a href="/YazarTest/AddYazar/" class="btn btn-outline-primary">Yeni Yazar Girişi</a>
