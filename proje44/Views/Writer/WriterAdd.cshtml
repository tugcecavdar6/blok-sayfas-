@model proje44.Models.AddProfileImage
@{
    ViewData["Title"] = "WriterAdd";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}


<form class="form-group" method="post" enctype="multipart/form-data">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Kayıt Sayfası</h4>
                <br />
                @Html.HiddenFor(x => x.yazarID)
                <div class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">Ad Soyad</label>
                        @Html.TextBoxFor(x => x.yazarAd, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">E-mail</label>
                        @Html.TextBoxFor(x => x.yazarMail, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Şifre</label>
                        @Html.PasswordFor(x => x.yazarSifre, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.yazarSifre, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2 mb-2">Şifre Tekrar</label>
                        <input type="password" name="PasswordAgain" class="form-control" id="password2" placeholder="Şifrenizi Tekrar Giriniz" required="" />
                    </div>
                    <div class="form-group">
                        <label>Görsel</label>
                        <input type="file" name="WriterImage" />
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Hakkında</label>
                        @Html.TextAreaFor(x => x.yazarHakkinda, 10, 3, new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
                    <button class="btn btn-light">İptal</button>
                </div>
            </div>
        </div>
    </div>
</form>