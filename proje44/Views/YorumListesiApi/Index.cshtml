@using proje44.Controllers
@model List<Class2>
@{ ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml"; }


<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Adı Soyadı</th>
        <th>Yorum Başlık</th>
        <th>Yorum içeriği</th>
        <th>Yorum Tarihi</th>
        <th>Blog ID</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.yorumID</td>
    <td>@item.yorumAd</td>
    <td>@item.yorumBaslik</td>
    <td>@item.yorumicerik</td>
    <td>@item.yorumDate</td>
    <td>@item.BlogID</td>

    <td><a href="/YorumListesiApi/DeleteYorum/@item.yorumID" class="btn btn-outline-danger">Sil</a></td>

</tr>}
</table>

